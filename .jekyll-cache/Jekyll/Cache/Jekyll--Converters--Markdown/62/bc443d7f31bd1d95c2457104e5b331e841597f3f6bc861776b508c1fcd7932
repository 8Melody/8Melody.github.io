    <span class="k">override</span> <span class="k">fun</span> <span class="nf">getItemOffsets</span><span class="p">(</span><span class="nv">outRect</span><span class="p">:</span> <span class="nc">Rect</span><span class="p">?,</span> <span class="nv">view</span><span class="p">:</span> <span class="nc">View</span><span class="p">?,</span> <span class="nv">parent</span><span class="p">:</span> <span class="nc">RecyclerView</span><span class="p">?,</span> <span class="nv">state</span><span class="p">:</span> <span class="nc">RecyclerView</span><span class="p">.</span><span class="n">State</span><span class="p">?)</span> <span class="p">{</span>
        <span class="k">super</span><span class="p">.</span><span class="n">getItemOffsets</span><span class="p">(</span><span class="n">outRect</span><span class="p">,</span> <span class="n">view</span><span class="p">,</span> <span class="n">parent</span><span class="p">,</span> <span class="n">state</span><span class="p">)</span>
        <span class="n">outRect</span><span class="o">?.</span><span class="n">top</span> <span class="p">=</span> <span class="n">dividerHeight</span>
    <span class="p">}</span>
<span class="p">}</span>
